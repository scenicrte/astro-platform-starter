---

const navItems = [
    { linkText: 'Home', href: 'https://ithacarealtor.com/' },
    { linkText: 'Listings', href: 'https://ithacarealtor.com/real-estate/' },
    { linkText: 'Articles', href: 'https://ithacarealtor.com/articles/' },
    { linkText: 'About', href: 'https://ithacarealtor.com/about/' },
    { linkText: 'Contact', href: 'https://ithacarealtor.com/contact/' }
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
